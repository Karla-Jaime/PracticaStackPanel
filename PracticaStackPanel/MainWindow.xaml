<Window x:Class="PracticaStackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaStackPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel Orientation="Vertical">
        
        <Button VerticalAlignment="Stretch">Boton Eins</Button>
        <Button VerticalAlignment="Top">Boton Zwei</Button>
        <Button VerticalAlignment="Center">Boton Drei</Button>
        <Button VerticalAlignment="Bottom">Boton Vief</Button>
        <Button HorizontalAlignment="Center">Boton Fünf</Button>
        <Button HorizontalAlignment="Left">Boton Sechs</Button>
        <Button HorizontalAlignment="Right" Width="250">Boton Sieben</Button>
        <Button HorizontalAlignment="Stretch">Boton Acht</Button>
        <Button Width="250">Boton Neun</Button>
        <Button>Boton Zehn</Button>
        <Button>Boton Elf</Button>
        <Button>Boton Zwolf</Button>
        <Button>Boton Dreizehen</Button>

    </StackPanel>
</Window>
